<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toTopOf="@+id/user_detail_anchor"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageView
            android:id="@+id/user_detail_pull_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0D153B"
            />

        <LinearLayout
            android:id="@+id/gift_up_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/gift_up_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_present_entrance_pullup"
                />

            <TextView
                android:id="@+id/gift_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上拉查看礼物墙"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:drawablePadding="3dp"
                />

            <ImageView
                android:id="@+id/gift_up_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_present_entrance_pullup"
                />

        </LinearLayout>


    </FrameLayout>

</LinearLayout>